<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false"
        />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!--Permiso para la alarma-->
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />


    <application

        android:allowBackup="true"

        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icono"
        android:supportsRtl="true"
        android:theme="@style/Theme.SOSPhone"

        tools:targetApi="31">



        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity
            android:name=".TlfnActivity"
            android:exported="false" />

        <activity
            android:name=".ConfActivity"
            android:exported="true">
            <!--Ponemos que el confActivity aparezca el primero para configurar la app-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
