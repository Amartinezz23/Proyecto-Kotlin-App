<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".ConfActivity">

    <!-- Título de configuración -->
    <TextView
        android:id="@+id/txt_conf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Configuracion de la App"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#2C3E50"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_phone"
        app:layout_constraintVertical_bias="0.05"/>

    <!-- Campo para teléfono -->

    <!-- Botón de guardar teléfono -->
    <EditText
        android:id="@+id/edit_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="@string/txt_phone"
        android:inputType="phone"
        android:padding="12dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_conf" />

    <Button
        android:id="@+id/btn_conf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Guardar telefono"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edit_phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Campo para URL -->
    <EditText
        android:id="@+id/editUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="Introduce URL"
        android:inputType="textUri"
        android:padding="12dp"
        android:textSize="20sp"
        android:saveEnabled="false"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/btn_conf"
        app:layout_constraintStart_toStartOf="parent"
        android:imeOptions="actionDone"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Botón de guardar URL -->
    <Button
        android:id="@+id/btnSaveUrl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Guardar URL"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFFFFF"
        android:onClick="guardarUrl"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/editUrl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:backgroundTint="#3F51B5"
        android:onClick="volverAMainActivity"
        android:text="Aceptar"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
